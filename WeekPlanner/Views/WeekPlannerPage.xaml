<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:base1="clr-namespace:WeekPlanner.ViewModels.Base;assembly=WeekPlanner" x:Class="WeekPlanner.Views.WeekPlannerPage" base1:ViewModelLocator.AutoWireViewModel="true" Title="Ugeplan">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="Edit" Order="Secondary" Text="Rediger" Clicked="Edit_OnClicked" />
        <ToolbarItem x:Name="ChangeCitizen" Order="Secondary" Text="Skift borger" Clicked="ChangeCitizen_OnClicked" />
        <ToolbarItem x:Name="Settings" Order="Secondary" Text="Indstillinger" Clicked="Settings_OnClicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="MondayColor">#067700</Color>
            <Color x:Key="TuesdayColor">#8c1086</Color>
            <Color x:Key="WednesdayColor">#ff7f00</Color>
            <Color x:Key="ThursdayColor">#0017ff</Color>
            <Color x:Key="FridayColor">#ffdd00</Color>
            <Color x:Key="SaturdayColor">#ff0102</Color>
            <Color x:Key="SundayColor">#ffffff</Color>
            <Color x:Key="WhiteColor">#000</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <!-- The HeightRequest is set to make the Grid's height larger
        than the ListViews height in effect disabling their scrolling.
        Seems to only work in landscape mode-->
        <Grid HeightRequest="3000">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="AUTO" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!-- WEEKDAYS TITLEBAR -->
            <Grid Grid.Row="0" Grid.Column="0">
                <Label Text="Mandag" TextColor="{StaticResource WhiteColor}" />
            </Grid>
            <Grid Grid.Row="0" Grid.Column="1">
                <Label Text="Tirsdag" TextColor="{StaticResource WhiteColor}" />
            </Grid>
            <Grid Grid.Row="0" Grid.Column="2">
                <Label Text="Onsdag" TextColor="{StaticResource WhiteColor}" />
            </Grid>
            <Grid Grid.Row="0" Grid.Column="3">
                <Label Text="Torsdag" TextColor="{StaticResource WhiteColor}" />
            </Grid>
            <Grid Grid.Row="0" Grid.Column="4">
                <Label Text="Fredag" TextColor="{StaticResource WhiteColor}" />
            </Grid>
            <Grid Grid.Row="0" Grid.Column="5">
                <Label Text="Lørdag" TextColor="{StaticResource WhiteColor}" />
            </Grid>
            <Grid Grid.Row="0" Grid.Column="6">
                <Label Text="Søndag" TextColor="{StaticResource WhiteColor}" />
            </Grid>
            <!-- WEEKDAY LISTS -->
            <!-- TODO, if someone knows how to each day a custom component that could be reused that would be great :-) -->
            <ScrollView Grid.Row="1" Grid.ColumnSpan="7">
                <Grid>
                    <ListView ItemsSource="{Binding ImageSources}" Grid.Column="0" BackgroundColor="{StaticResource MondayColor}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ImageCell ImageSource="{Binding}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <ListView ItemsSource="{Binding ImageSources}" Grid.Column="1" BackgroundColor="{StaticResource TuesdayColor}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ImageCell ImageSource="{Binding}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <ListView ItemsSource="{Binding ImageSources}" Grid.Column="2" BackgroundColor="{StaticResource WednesdayColor}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ImageCell ImageSource="{Binding}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <ListView ItemsSource="{Binding ImageSources}" Grid.Column="3" BackgroundColor="{StaticResource ThursdayColor}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ImageCell ImageSource="{Binding}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <ListView ItemsSource="{Binding ImageSources}" Grid.Column="4" BackgroundColor="{StaticResource FridayColor}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ImageCell ImageSource="{Binding}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <ListView ItemsSource="{Binding ImageSources}" Grid.Column="5" BackgroundColor="{StaticResource SaturdayColor}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ImageCell ImageSource="{Binding}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <ListView ItemsSource="{Binding ImageSources}" Grid.Column="6" BackgroundColor="{StaticResource SundayColor}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ImageCell ImageSource="{Binding}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>
